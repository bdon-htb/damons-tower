# Level Editor specific widgets
<MainWindow>:
  orientation: 'vertical'
  FileMenu
  BoxLayout:
    Label:
      text: 'MapCanvas'
    Label:
      text: 'MapDataView'
  Label:
    text: 'Level Name'

<FileMenu>:
  orientation: 'horizontal'
  Button:
    text: 'File'
    on_release: root.filedropdown.open(self)
  Button:
    text: 'Edit'
  Button:
    text: 'View'

<FileDropDown>:
  Button:
    text: 'My first Item'
    size_hint_y: None
    height: 44
    on_release: root.select('item1')
  Label:
    text: 'Unselectable item'
    size_hint_y: None
    height: 44
  Button:
    text: 'My second Item'
    size_hint_y: None
    height: 44
    on_release: root.select('item2')
