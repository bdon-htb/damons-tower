#:import utils kivy.utils
# Primitives
<Spinner>:
  size_hint: None, None
  background_color: utils.get_color_from_hex('#0097A7')

# Generic custom widgets
<CustomSpinner>:

# Level Editor specific widgets
<MainWindow>:
  orientation: 'vertical'
  FileMenu
  BoxLayout:
    Label:
      text: 'MapCanvas'
    Label:
      text: 'MapDataView'
  Label:
    text: 'Level Name'

<FileMenu>:
  orientation: 'horizontal'
  size_hint: None, None
  size: root.size[0], 75
  button_size: 100, self.size[1]
  CustomSpinner:
    size: root.button_size
    text: 'File'
    values: 'New', 'Open', 'Save', 'Save as'
    methods: {'New': root.new_file}
  CustomSpinner:
    size: root.button_size
    text: 'Edit'
    values: 'Undo', 'Redo', 'Resize Map'
  Spinner:
    size: root.button_size
    text_autoupdate: True
    values: 'Array View', 'Tileset View'
