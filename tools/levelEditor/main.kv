# Generic custom widgets
<CustomSpinner>:

# Level Editor specific widgets
<MainWindow>:
  orientation: 'vertical'
  FileMenu
  BoxLayout:
    Label:
      text: 'MapCanvas'
    Label:
      text: 'MapDataView'
  Label:
    text: 'Level Name'

<FileMenu>:
  orientation: 'horizontal'
  button_size: (50, 50)
  CustomSpinner:
    size_hint: 0.1, 1
    text: 'File'
    values: 'New', 'Open', 'Save', 'Save as'
    methods: {'New': root.new_file}
  CustomSpinner:
    size_hint: 0.1, 1
    text: 'Edit'
    values: 'Undo', 'Redo', 'Resize Map'
  Spinner:
    size_hint: 0.1, 1
    text_autoupdate: True
    values: 'Array View', 'Tileset View'
  Label:
    size_hint: 0.7, 1
